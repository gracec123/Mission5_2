@{
}


    <!--This part start to be different-->
    <main id="main">

        <!-- ======= Breadcrumbs ======= -->
        <div class="breadcrumbs d-flex align-items-center" style="background-image: url('lib/bootstrap/dist/assets/img/breadcrumbs-bg1.jpg');">
            <div class="container position-relative d-flex flex-column align-items-center" data-aos="fade">

                <h2>Get a Quote</h2>
                <ol>
                    <li><a href="home">Home</a></li>
                    <li>Quote</li>
                </ol>

            </div>
        </div><!-- End Breadcrumbs -->
        <!-- ======= Contact Section ======= -->
        <section id="get-started" class="get-started section-bg">
            <div class="container">


                <div class="row justify-content-between gy-4">

                    <div class="col-lg-6 d-flex align-items-center" data-aos="fade-up">
                        <div class="content">
                            <h3>Get Started with Chinese Calligraphy</h3>
                            <p>Interested in mastering the art of Chinese calligraphy?
                            <p>Let me help you unlock your artistic potential! Whether you're a beginner or looking to refine your skills, my personalized tutoring services are designed to meet your needs.</p>
                        </div>
                    </div>


                    <div class="col-lg-5" data-aos="fade">
                        <form id="calculator-form" class="php-email-form">
                            <h3>Service Charge Calculator</h3>
                            <p>Enter the number of hours you need tutoring to calculate the total cost.</p>
                            <div class="row gy-3">

                                <div class="col-md-12">
                                    <label for="hours" class="form-label" style="font-size: 14px ; font-weight: bold;">ENTER # OF HOURS:</label>
                                    <input type="number" id="hours" class="form-control" required>
                                </div>

                                <div class="col-md-12">
                                    <label for="rate" class="form-label" style="font-size: 14px; font-weight: bold;">CHARGE PER HOUR ($):</label>
                                    <input type="text" id="rate" class="form-control" value="25" readonly>
                                </div>

                                <!-- Error Message Display -->
                                <div class="col-md-12" id="error-message" style="color: rgb(255, 136, 0); display: none;">
                                    <!-- Error message will be displayed here -->
                                </div>


                                <div class="text-center">
                                    <button type="submit" id="calculate" class="btn">SUBMIT QUOTE</button>
                                    <button type="button" id="clear-hours" class="btn btn-seco">CLEAR HOURS</button>
                                </div>



                                <div class="col-md-12">
                                    <label for="total" class="form-label" style="font-size: 14px; font-weight: bold;">TOTAL:</label>
                                    <div id="total" class="form-control">$ 0</div>
                                </div>
                            </div>
                        </form>
                    </div>




                    <script src="lib/jquery/jquery.min.js"></script>
                    <script src="js/site.js"></script>





                </div>
                <!-- End Quote Form -->

            </div>
        </section>





    </main><!-- End #main -->
   